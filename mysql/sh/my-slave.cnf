[mysqld]
server_id=${SERVER_ID}
gtid_mode=on
enforce-gtid-consistency=on

log-bin=mysql-bin
binlog-format=ROW
binlog-ignore-db=mysql,information_schema
# 如果想实现 主-从（主）-从 这样的链条式结构，需要设置：
# 只有加上它，从前一台机器上同步过来的数据才能同步到下一台机器。
log-slave-updates=1

general_log=1
# log-error=/var/lib/mysql/error.log
slow_query_log=1
## relay_log配置中继日志
#relay_log=edu-mysql-relay-bin

## 还可以设置一个log保存周期：
#expire_logs_days=14

# 跳过所有的错误，继续执行复制操作
slave-skip-errors=all

# 从库只读
# super_read_only=1
# read_only=1
